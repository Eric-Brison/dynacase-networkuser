<?xml version="1.0"?>
<module name="freedom-networkuser" disabled="no" version="@VERSION@" release="@RELEASE@" infopath="http://www.freedom-ecm.org/modules/freedom-networkuser/freedom-networkuser">

  <description lang="en">Active directory or POSIX LDAP functions to authenticate users.</description>

  <requires>
    <module name="freedom" />
  </requires>

  <post-install>
    <process command="programs/app_post NU I" />
    <process command="programs/record_application NU" />
    <process command="programs/app_post NU U" />
    <process command="programs/update_catalog" />
  </post-install>
 
  <post-upgrade>
    <process command="programs/pre_migration NU" />
    <process command="programs/app_post NU U" />
    <process command="programs/record_application NU" />
    <process command="programs/post_migration NU" />
    <process command="programs/update_catalog" />
  </post-upgrade>

  <changelog>
    <version number="0.4.0-5" date="2010-03-03">
      <change title="Added infopath link" />
    </version>
    <version number="0.4.0-4" date="2010-03-01">
      <change title="Refresh groups mail address when a networkuser mail addr has changed" url="http://dev.freedom-ecm.org/issues/629" />
    </version>
  </changelog>

</module>
